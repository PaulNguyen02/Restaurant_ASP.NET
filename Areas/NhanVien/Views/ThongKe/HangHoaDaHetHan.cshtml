@using QuanLyNhaHang.Models
@model IEnumerable<HangHoaDaHetHanViewModel>
@{
    ViewBag.Title = "HangHoaDaHetHan";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVienKho.cshtml";
}



<h2 class="display-4 text-center">Danh sách Hàng Hóa Đã Hết Hạn</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên Nguyên Liệu</th>
                <th>Mã Nguyên Liệu</th>
                <th>Ngày Nhập</th>
                <th>Hạn Sử Dụng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-danger">
                    <td>@item.TenNguyenLieu</td>
                    <td>@item.MaNguyenLieu</td>
                    <td>@item.NgayNhap.ToString("dd/MM/yyyy")</td>
                    <td>@item.HanSuDung.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
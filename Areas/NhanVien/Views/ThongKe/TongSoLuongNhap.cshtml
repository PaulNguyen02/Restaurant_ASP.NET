@using QuanLyNhaHang.Models
@model ThongKeViewModel
@{
    ViewBag.Title = "TongSoLuongNhap";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVienKho.cshtml";
}
<h2 class="display-4 text-center">Số lượng nhập theo từng sản phẩm</h2>

<div class="container">
    <form asp-action="TongSoLuongNhap" method="post" class="form-inline mb-3">
        <div class="form-group mb-2">
            <label for="startDate" class="sr-only">Từ ngày</label>
            <input type="date" class="form-control" id="startDate" name="startDate" required>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label for="endDate" class="sr-only">Đến ngày</label>
            <input type="date" class="form-control" id="endDate" name="endDate" required>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Thống kê</button>
    </form>

    @if (Model != null && Model.TongSoLuongNhap != null)
    {
        <h3>Kết quả:</h3>
        <p>Tổng số lượng hàng hóa nhập từ @Model.StartDate.ToString("dd/MM/yyyy") đến @Model.EndDate.ToString("dd/MM/yyyy") là: @Model.TongSoLuongNhap</p>

        <h3>Chi tiết hàng hóa nhập:</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Tên Nguyên Liệu</th>
                        <th>Mã Nguyên Liệu</th>
                        <th>Số Lượng Nhập</th>
                        <th>Giá Nhập</th>
                        <th>Thành Tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ChiTietPhieuNhaps)
                    {
                        <tr>
                            <td>@item.NguyenLieu.TenNguyenLieu</td>
                            <td>@item.MaNguyenLieu_id</td>
                            <td>@item.SoLuongNhap</td>
                            <td>@item.GiaNhap</td>
                            <td>@item.ThanhTien</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
@model IEnumerable<QuanLyNhaHang.Models.PhieuNhap>

@{
    ViewBag.Title = "Danh sách Phiếu Nhập";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVienKho.cshtml";
}

<h2>Danh sách Phiếu Nhập</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nhân viên nhập hàng</th>
           
                <th>Ngày Nhập</th>
                <th>Nhà cung cấp</th>
                <th>Tổng Tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NhanVien.TenNhanVien</td>
                    <td>@item.NgayNhap</td>
                    <td>@item.NhaCC.TenNCC</td>
                    <td>@item.TongTien</td>
                    <td>@Html.ActionLink("Chi tiết", "QLKChiTietPhieuNhapHang", new { id = item.MaPhieuNhap }, new { @class = "btn btn-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>

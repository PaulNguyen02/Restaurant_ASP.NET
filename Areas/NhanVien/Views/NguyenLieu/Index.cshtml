
@using QuanLyNhaHang.Models
@model IEnumerable<NguyenLieuViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/NhanVien/Views/Shared/_LayoutNhanVienKho.cshtml";
}

<h2>Danh sách Nguyên Liệu</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã Nguyên Liệu</th>
            <th>Tên Nguyên Liệu</th>
            <th>Số Lượng Hiện Còn</th>
            <th>Ghi Chú</th>
            <th>Giá Nhập Cuối</th>
            <th>Loại Nguyên Liệu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNguyenLieu</td>
                <td>@item.TenNguyenLieu</td>
                <td>@item.SoLuongHienCon</td>
                <td>@item.GhiChu</td>
                <td>@item.GiaNhapCuoi</td>
                <td>@item.TenLoaiNguyenLieu</td>
            </tr>
        }
    </tbody>
</table>


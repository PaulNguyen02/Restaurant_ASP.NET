@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Clients/Views/Shared/_LayoutClient.cshtml";
}
<header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" style="background-image: url(/Assets2/images/Background.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-left">


                <div class="row row-mt-15em">
                    <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
                        <span class="intro-text-small">Trở thành khách hàng thân thiết của</span>
                        <h1 class="cursive-font">Euphoria Restaurant</h1>
                    </div>
                    <div class="col-md-4 col-md-push-1 animate-box" data-animate-effect="fadeInRight">
                        <div class="form-wrap">
                            <div class="tab">

                                <div class="tab-content">
                                    <div class="tab-content-inner active" data-content="signup">
                                        <h3 class="cursive-font">Đăng ký</h3>
                                        <form action="/Home/Signup" method="post">
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="activities">Tên khách hàng</label>
                                                    <input id="activities" name="name" class="form-control" type="text" />
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="activities">Địa chỉ</label>
                                                    <input id="activities" name="address" class="form-control" type="text" />
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="activities">Số điện thoại</label>
                                                    <input id="activities" name="phone" class="form-control" type="tel" />
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="activities">Username</label>
                                                    <input id="activities" name="username" class="form-control" type="text" />
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <label for="activities">Password</label>
                                                    <input id="activities" name="password" class="form-control" type="password" />
                                                </div>
                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <input type="submit" class="btn btn-primary btn-block" value="Đăng ký">
                                                </div>
                                            </div>
                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</header>
